{
  "name": "fiume",
  "type": "module",
  "version": "0.1.0",
  "description": "lightweight javascript/typescript state machine",
  "types": "dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marco-ippolito/fiume.git"
  },
  "bugs": {
    "url": "https://github.com/marco-ippolito/fiume/issues"
  },
  "homepage": "https://marcoippolito.dev",
  "keywords": [
    "fsm",
    "finite state machine",
    "state machine"
  ],
  "scripts": {
    "prepublishOnly": "git push origin --follow-tags",
    "prepare": "husky install",
    "format": "biome format src test --write",
    "lint": "biome check src test",
    "pretest": "pnpm build",
    "test": "pnpm coverage && pnpm test:typescript",
    "prebuild": "rimraf dist",
    "build": "tsc -d",
    "coverage": "c8 --100 pnpm test:javascript",
    "test:javascript": "node --test",
    "test:typescript": "tsd"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/node": "^20.9.0",
    "c8": "^8.0.1",
    "husky": "^8.0.2",
    "rimraf": "^5.0.5",
    "tsd": "^0.29.0",
    "typescript": "^5.2.2"
  },
  "author": {
    "name": "Marco Ippolito",
    "email": "marcoippolito54@gmail.com",
    "url": "https://github.com/marco-ippolito",
    "author": true
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "license": "Apache-2.0",
  "exports": {
    ".": [
      {
        "import": "./dist/index.js"
      },
      "./dist/index.js"
    ],
    "./package.json": "./package.json"
  },
  "tsd": {
    "directory": "test/types"
  }
}